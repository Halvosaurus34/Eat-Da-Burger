<div class="container">
<h1 class="display-4 text-center mb-5">Eat-Da-Burger!</h1>
<div class="row mt-5 mb-5">
  <div class="col-6">
<h3>Devoured</h3>
  <ul class="list-group">
    {{#each devoured}}
    <li class="list-group-item m-0 p-1">
      <p class="m-1 p-0">
        {{this.burger_name}}
      </p>
    </li>
    {{/each}}
  </ul>
  </div>
  <div class="col-6">
  <h3>Waiting to be devoured</h3>
  <ul class="list-group">
    {{#each notDevoured}}
    <li class="list-group-item p-0 m-0">
      <p class="m-1 p-0">
        {{this.burger_name}} 
          <button class="btn btn-primary float-right p-2 m-0" onClick="eatBurger('{{this.burger_name}}',{{this.id}})">Eat!</button>

      </p>
    </li>
    {{/each}}
  </ul>
  </div>
</div>
<div class="text-center mt-5">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerName" name="burgerName">
  </div>

  <button class="btn btn-primary" type="submit" onClick="addBurger($('#burgerName').val())">Add Burger</button>
</form>
</div>

</div>